<%- include('includes/head') %> <%- include('includes/footer') %> <%-
include('includes/nav') %>

<div class="container">
  <!-- Corrigido: <di> -> <div> -->
  <div class="row">
    <div class="col-lg-2"></div>

    <!-- centralizando conteúdo em 8 colunas -->
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages') %>

      <!-- row interna: usar align-items-start para garantir que as colunas comecem no mesmo topo -->
      <div class="row align-items-start gx-4">
        <!-- usar col-lg-6 para que as duas colunas tenham largura igual -->
        <div class="col-lg-6 py-3">
          <div class="card h-100">
            <div class="card-body">
              <h4>Faça seu cadastro</h4>
              <p>
                Se você ainda não possui uma conta, preencha o formulário abaixo
              </p>
              <form
                class="form-cadastro"
                action="/login/register"
                method="post"
              >
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="mb-3">
                  <label>Endereço de E-mail</label>
                  <input type="email" class="form-control" name="email" />
                </div>
                <div class="mb-3">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="password" />
                </div>
                <button type="submit" class="btn btn-primary">
                  Cadastrar conta
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-lg-6 py-3">
          <div class="card h-100">
            <div class="card-body">
              <h4>Faça seu login</h4>
              <p>Se você já possui uma conta, faça seu login abaixo:</p>
              <form class="form-login" action="/login/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="mb-3">
                  <label>Endereço de E-mail</label>
                  <input type="email" class="form-control" name="email" />
                </div>
                <div class="mb-3">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="password" />
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
  <!-- fecha a row externa -->
</div>
